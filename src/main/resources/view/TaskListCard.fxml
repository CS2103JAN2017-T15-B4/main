<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Point3D?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>

<!--@@author A0141011J -->

<HBox id="cardPane" fx:id="cardPane" styleClass="card" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <Rectangle fx:id="overdue" arcHeight="5.0" arcWidth="5.0" fill="#FFFFFF" height="93.0" stroke="TRANSPARENT" strokeType="INSIDE" width="7.0" />
        <GridPane HBox.hgrow="ALWAYS">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
            </columnConstraints>
            <children>
                <VBox alignment="CENTER_LEFT" minHeight="90.0" GridPane.columnIndex="0">
                    <stylesheets>
                        <URL value="@DarkTheme.css" />
                        <URL value="@Extensions.css" />
                    </stylesheets>
                    <padding>
                        <Insets bottom="5" left="15" right="5" top="5" />
                    </padding>

                    <children>
                        <HBox alignment="CENTER_LEFT" spacing="5">
                            <children>
                                <HBox>
                                    <Label fx:id="id" styleClass="cell_big_label" />
                                    <Label fx:id="title" styleClass="cell_big_label" text="\$first" />
                                     <Label fx:id="margin" />
                                </HBox>
                            </children>
                        </HBox>
                        <Label fx:id="start" styleClass="cell_small_label" text="\$start" />
                        <Label fx:id="end" styleClass="cell_small_label" text="\$end" />
                        <FlowPane fx:id="tags" />
                    </children>
                </VBox>
            </children>
         <rowConstraints>
            <RowConstraints />
         </rowConstraints>
        </GridPane>
      <StackPane prefHeight="25.0" prefWidth="35.0">
         <children>
              <Circle fx:id="priority_shape" fill="#ffffff00" radius="20.0" stroke="#000000" strokeType="INSIDE" strokeWidth="4.0" StackPane.alignment="CENTER">
               <rotationAxis>
                  <Point3D />
               </rotationAxis>
            </Circle>
            <Label fx:id="priority" contentDisplay="CENTER" text="\$priority" textAlignment="CENTER" StackPane.alignment="CENTER">
               <font>
                  <Font name="System Bold" size="13.0" />
               </font>
            </Label>
         </children>
         <padding>
            <Insets right="15.0" />
         </padding>
      </StackPane>
    </children>
</HBox>
